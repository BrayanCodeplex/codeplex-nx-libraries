{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@codeplex/theme": ["packages/theme/src/index.ts"],
      "@codeplex/ui": ["packages/ui/src/index.ts"],
      "@codeplex/data-view": ["packages/data-view/src/index.ts"],
      "@codeplex/layout": ["packages/layout/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
